{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Micro Note",
  "version": "0.1.0",
  "identifier": "com.pemomomo.micro-note",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Micro Note",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/micro-note_32x32.png",
      "icons/micro-note_128x128.png",
      "icons/micro-note_128x128@2x.png",
      "icons/micro-note.icns",
      "icons/micro-note.ico"
    ],
    "resources": [
      "../dist"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: SHINYA SAITA (RNGXZZHG98)"
    }
  }
}
