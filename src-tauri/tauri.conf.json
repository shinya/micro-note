{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Micro Note",
  "version": "0.1.0",
  "identifier": "com.shinyasaita.tauri-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Micro Note",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/micro-note_32x32.png",
      "icons/micro-note_128x128.png",
      "icons/micro-note_128x128@2x.png",
      "icons/micro-note.icns",
      "icons/micro-note.ico"
    ]
  }
}
